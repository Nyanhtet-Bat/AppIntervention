<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#129"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/btn_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="80dp"
        android:textColor="#431"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_RANDOM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_chainStyle= "spread"
        android:text="RANDOM"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_TOAST"
        app:layout_constraintTop_toBottomOf="@id/btn_TOAST"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_TOAST"/>

    <Button
        android:id="@+id/btn_TOAST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOAST"
        app:layout_constraintLeft_toRightOf="@+id/btn_RANDOM"
        app:layout_constraintRight_toLeftOf="@+id/btn_COUNTDOWN"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8"/>

    <Button
        android:id="@+id/btn_COUNTDOWN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COUNT"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_TOAST"
        app:layout_constraintLeft_toRightOf="@id/btn_TOAST"
        app:layout_constraintRight_toRightOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>